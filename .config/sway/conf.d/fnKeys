bindsym --locked XF86AudioMute exec sh -c 'wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle; audio.sh'
bindsym --locked XF86AudioLowerVolume exec sh -c 'wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%-; audio.sh'
bindsym --locked XF86AudioRaiseVolume exec sh -c 'wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%+; audio.sh'
bindsym --locked XF86AudioMicMute exec sh -c 'wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle; audio.sh'

bindsym --locked XF86MonBrightnessDown exec sh -c 'brightnessctl set 5%-; brightness.sh'
bindsym --locked XF86MonBrightnessUp exec sh -c 'brightnessctl set 5%+; brightness.sh'

bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous
